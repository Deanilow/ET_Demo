@model IEnumerable<ET.Web.Models.ComplejoDeportivoModel>

@{
    ViewData["Title"] = "Complejo Deportivo";
    Layout = "_Layout";
}
<div class="container p-4 border mt-5">
    <div class="row pb-2">
        <div class="col">
            <h3 class="text-dark">Complejos Deportivos</h3>
        </div>
        <div class="col text-end pt-1 text-right">
            <a asp-controller="ComplejoDeportivo" asp-action="Create" class="btn btn-outline-primary"><i class="bi bi-plus-square-fill"></i> Crear Nuevo Complejo</a>
        </div>
    </div>
    <div class="table-responsive">
        <table class="table table-hover">
            <thead>
                <tr class="">
                    <th scope="col">Sede</th>
                    <th scope="col">Nombre</th>
                    <th scope="col">Localizacion</th>
                    <th scope="col">Jefe de Organizacion</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td scope="row"><strong>@item.SedeOlimpicaModel.Nombre</strong></td>
                        <td><strong>@item.Nombre</strong></td>
                        <td><strong>@item.Localizacion</strong></td>
                        <td><strong>@item.JefeOrganizacion</strong></td>
                        <td class="text-left">
                            <a asp-controller="ComplejoDeportivo" asp-action="Update" asp-route-IdComplejo="@item.Id" class="waves-effect waves-light"><i class="fa fa-edit fa-2x"></i></a>
                            <a asp-controller="ComplejoDeportivo" asp-action="Delete" asp-route-IdComplejo="@item.Id" class="waves-effect waves-light"><i class="fa fa-trash fa-2x"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>